{
  "name": "serverside-app",
  "config": {
    "supervisor": "-w ./app,./webpack,./app/components/App.js -i ./app/**/*.scss,./app/browser.js,./app/components",
    "serverRoot": "./babel.server",
    "sassRoot": "./app/styles/*.scss ./app/styles/*/*.scss",
    "destDepth": "./public/css/**/*.css ./public/css/*.css",
    "dest": "./public/css"
  },
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "watch-sass": "fsmonitor -d ./app/styles -s '+*.scss' npm run sass",
    "watch-js"  : "NODE_ENV=development supervisor $npm_package_config_supervisor babel-node $npm_package_config_serverRoot",
    "build:dev" : "NODE_ENV=development npm run watch-js && npm run watch-sass",
    "sass": "node-sass app/styles -o $npm_package_config_dest && autoprefixer $npm_package_config_destDepth -b 'last 2 versions'",
    "sass:main" : "cat $npm_package_config_sassRoot | node-sass | autoprefixer -b 'last 2 versions' $npm_package_config_minify -o $npm_package_config_dest/main.css",
    "build:sass": "npm run sass:main && npm run sass",
    "build:prod": "NODE_ENV=production webpack --config ./webpack/prod.config.js && npm run build:sass && ./minify.sh ./public/css",
    "watch:gulp": "npm run watch-js | gulp watch",
    "testing"   : "gulp watch & npm run watch-js"
  },
  "author": "tal woolf",
  "license": "ISC",
  "dependencies": {
    "autoprefixer-loader": "latest",
    "cors": "latest",
    "css-loader": "latest",
    "express": "latest",
    "node-jsx": "latest",
    "extract-text-webpack-plugin": "^0.5.0",
    "piping": "^0.1.8",
    "react": "latest",
    "react-router": "latest",
    "ejs": "^2.3.1"
  },
  "staticPlugin": "statics-stylesheets",
  "devDependencies": {
    "autoprefixer": "latest",
    "babel": "latest",
    "babel-core": "latest",
    "babel-loader": "latest",
    "compression": "latest",
    "debug": "^2.1.3",
    "esprima-fb": "^14001.1.0-dev-harmony-fb",
    "gulp": "^3.8.11",
    "gulp-concat": "^2.5.2",
    "gulp-minify-css": "latest",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.0.0",
    "gulp-sass": "^1.3.3",
    "gulp-util": "^3.0.4",
    "gulp-watch": "^4.2.4",
    "iojs": "^1.7.1",
    "isomorphic-fetch": "^2.0.2",
    "jsx-loader": "latest",
    "node-sass": "git+https://github.com/sass/node-sass.git",
    "proxy-middleware": "^0.11.0",
    "react-async": "^2.1.0",
    "react-document-title": "^1.0.2",
    "react-hot-loader": "^1.2.4",
    "sass-loader": "1.0.1",
    "style-loader": "^0.10.2",
    "supervisor": "^0.6.0",
    "ua-parser-js": "^0.7.6",
    "webpack": "latest",
    "webpack-dev-server": "latest"
  }
}
